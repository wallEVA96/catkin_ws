<launch>
	<arg name="cmd_vel_topic" default="/cmd_vel" />
	<arg name="odom_topic" default="odom" />

	<node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" >
		<rosparam file="$(find screw_nav)/param/costmap_common_params.yaml" command="load" ns="global_costmap"/>
		<rosparam file="$(find screw_nav)/param/costmap_common_params.yaml" command="load" ns="local_costmap"/>
		<rosparam file="$(find screw_nav)/param/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find screw_nav)/param/global_costmap_params.yaml" command="load" />
		<rosparam file="$(find screw_nav)/param/move_base_params.yaml" command="load" />
		<rosparam file="$(find screw_nav)/param/navfn_global_planner_params.yaml" command="load" />
		<rosparam file="$(find screw_nav)/param/teb_local_planner_params.yaml" command="load" />
		<remap from="cml_vel" to="$(arg cmd_vel_topic)" />
		<remap from="odom" to="$(arg odom_topic)" />
	</node>
</launch>
